{% extends 'CoreGameBundle::bootstrap.html.twig' %}
{% block body %}
 {% for key, message in app.session.getFlashes() %}
        <div class="{{ key }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
{% endfor %}
        
<div class="navbar">
	<div class="navbar-inner">
		<div class="container-fluid">
			<center><a class="brand" href="#">Battleship</a></center>
		</div>
	</div>
</div>
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span1">
		&nbsp;
		</div>
		<div class="span10 well shadow">
                <form action="{{ path("game_register") }}" method="post">

<fieldset>
    <legend>Date de Alta</legend>
