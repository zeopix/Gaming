      <div class="controls">
        {{ form_widget(form.plainPassword) }}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Correo Electr√≥nico</label>
      <div class="controls">
        {{ form_widget(form.email) }}
      </div>
    </div>
  </fieldset>
        {{ form_rest(form) }}
  			<div class="loginbuttons">
				
				<a href="{{ path('game') }}" class="btn btn-large btn-inverse">Volver</a>
